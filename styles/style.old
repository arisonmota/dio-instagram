*{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    text-decoration: none;
    font-family: sans-serif;
    font-size: 14px;
}

.insta-phone {
    display: flex;
    align-items: center;    
    width: 50%;
}

.insta-phone img {
    height: 50rem;
}

.insta-login {
    display: flex;
    height: 3rem;
    align-items: center;
    flex-direction: column;
}

body {
    /*background-color: black;*/
    width: 100%;
    min-height: 100vh;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
}

.insta-logo {
    display: flex;
    align-items:center;
}

.insta-logo img{
    display: flex;
    height: 7rem;
}


